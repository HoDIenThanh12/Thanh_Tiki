<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_conner_16dp"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý lớp!"
        android:textSize="16dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/bg_yellow_topleftner_16dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm lớp quản lý"
                android:textSize="16dp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên cuộc họp: " />

                    <EditText
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:id="@+id/txt_NameMeettingD"
                        android:background="@drawable/bg_white_conner_10_boder"
                        android:enabled="true"
                        android:hint="Mời bạn nhập tên lớp...." />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian: " />

                    <TextView
                        android:id="@+id/tv_TimeMeettingD"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:background="@drawable/bg_white_conner_10_boder"
                        android:enabled="true"
                        android:hint="Mời bạn nhập ghi chứ...." />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày: " />

                    <TextView
                        android:id="@+id/tv_DatetimeMeettingD"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:background="@drawable/bg_white_conner_10_boder"
                        android:enabled="true"
                        android:hint="Mời bạn nhập ghi chứ...." />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/edt_Ghichu"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Feeback...."
                android:background="@drawable/bg_white_conner_10_boder"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/btn_SaveMeeting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Lưu"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_btn_base"
                    />
                <Button
                    android:id="@+id/btn_CloasMeeting"
                    android:background="@drawable/bg_yellow_conner_10_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Thoát"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>